{
  "name": "Mhodngan-backend",
  "version": "1.0.50",
  "scripts": {
    "test": "bun test",
    "test:unit": "bun test ./src/**/*.test.ts",
    "test:integration": "bun test ./tests/integration/**/*.test.ts",
    "lint": "biome check src/ --diagnostic-level=error",
    "lint:fix": "biome check --write src/",
    "security": "echo 'Checking for untrusted dependencies...' && bun pm untrusted && echo 'Security scan completed'",
    "dev": "bun run --watch src/index.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/openapi": "^1.4.11",
    "@supabase/supabase-js": "^2.78.0",
    "elysia": "latest",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/bun": "^1.3.2",
    "bun-plugin-env": "^0.4.1",
    "bun-types": "latest"
  },
  "module": "src/index.js"
}